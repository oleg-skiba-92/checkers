{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [],
    "module": "esnext"
  },
  "files": [
    "src/client/index.ts"
  ],
  "include": [
    "src/client/global.d.ts",
    "src/models/**/*.ts",
    "src/client/**/*.ts"
  ],
  "exclude": [
    "src/client/index.old.ts",
    "node_modules",
    "dist"
  ]
}
