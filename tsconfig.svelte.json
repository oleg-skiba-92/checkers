{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "importsNotUsedAsValues": "error",
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "Phaser"
    ],
    "module": "esnext"
  },
  "files": [
    "src/client/index.ts"
  ],
  "include": [
    "src/client/global.d.ts",
    "src/models/user.model.ts",
    "src/client/services/store.service.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
